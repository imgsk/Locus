<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    tools:context=".EditProfilePicActivity">

    <TextView
        android:id="@+id/editpictureHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="EDIT PROFILE PICTURE"
        android:textColor="@color/maincolor"
        android:textSize="20dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/createProfileselectImage"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/editProfiletext"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:onClick="selectNewProfile"
        android:background="@drawable/green_button"
        android:textColor="#fff"
        android:text="Edit Profile"/>

    <Button
        android:id="@+id/createProfileSkip"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/red_button"
        android:layout_below="@id/editProfiletext"
        android:layout_marginTop="30dp"
        android:onClick="cancelEditProfile"
        android:layout_marginRight="40dp"
        android:text="CANCEL"
        android:textColor="#fff"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editProfileprofile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        android:onClick="editImageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editpictureHeading"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/editProfiletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile Picture"
        android:layout_below="@id/editProfileprofile"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/plain_button"
        android:textColor="#000"
        android:onClick="removeProfile"
        android:text="Remove Profile Picture "
        android:layout_marginBottom="50dp"/>


</RelativeLayout>